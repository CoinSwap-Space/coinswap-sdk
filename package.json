{
  "name": "@coinswap-app/sdk",
  "license": "MIT",
  "version": "1.1.1",
  "description": "Coinswap SDK",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src/abis"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CoinSwap-Space/coinswap-app.git",
    "directory": "coinswap-sdk"
  },
  "author": "CoinSwap Space",
  "keywords": [
    "coinswap",
    "ethereum"
  ],
  "module": "dist/sdk.esm.js",
  "scripts": {
    "lint": "tsdx lint src test",
    "lint:fix": "tsdx lint src test --fix",
    "build": "tsdx build && npm run copy-abis",
    "copy-abis": "node -e \"const fs=require('fs');const path=require('path');const src='src/abis';const dist='dist/abis';if(!fs.existsSync(dist))fs.mkdirSync(dist,{recursive:true});fs.readdirSync(src).filter(f=>f.endsWith('.json')).forEach(f=>fs.copyFileSync(path.join(src,f),path.join(dist,f)))\"",
    "start": "tsdx watch",
    "test": "tsdx test",
    "prepublishOnly": "npm run build",
    "release": "npm run build && npm publish --access public"
  },
  "dependencies": {
    "big.js": "^6.2.1",
    "decimal.js-light": "^2.5.1",
    "jsbi": "^4.3.0",
    "tiny-invariant": "^1.3.3",
    "tiny-warning": "^1.0.3",
    "toformat": "^2.0.0"
  },
  "peerDependencies": {
    "ethers": "^6.14.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-class-properties": "^7.25.7",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.25.7",
    "@babel/plugin-transform-optional-chaining": "^7.25.7",
    "@babel/preset-env": "^7.25.9",
    "@jridgewell/sourcemap-codec": "^1.4.15",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^29.5.14",
    "babel-plugin-transform-jsbi-to-bigint": "^1.3.1",
    "bunchee": "^6.9.3",
    "ethers": "^6.14.4",
    "tsdx": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "rimraf": "^5.0.5",
    "glob": "^10.3.10",
    "minimist": "^1.2.8",
    "semver": "^7.6.3",
    "tar": "^7.4.3",
    "node-fetch": "^2.7.0",
    "ws": "^8.18.0",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.7.7",
    "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.4.15",
    "@rollup/plugin-json": "^5.0.0",
    "rollup-plugin-terser": "npm:@rollup/plugin-terser@^0.4.4"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  }
}
